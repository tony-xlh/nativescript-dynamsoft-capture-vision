<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:dce="nativescript-dynamsoft-camera-enhancer"
    navigatingTo="navigatingTo" class="page">
    <GridLayout rows="*, auto, auto">
        <dce:CameraEnhancer 
        loaded="{{ dceLoaded }}" 
        rowSpan="3" 
        active="{{ isActive }}"
        cameraID="{{ desiredCamera }}"
        torch="{{ desiredTorchStatus }}"></dce:CameraEnhancer>
        <Label rowSpan="3" text="{{ barcodeText }}" textWrap="true"/>
        <StackLayout row="1">
            <Button class="my-button" text="Init License" tap="{{ onInitLicense }}"></Button>
            <Button class="my-button" text="Switch Torch" tap="{{ onSwitchTorch }}"></Button>
            <Button class="my-button" text="Switch Camera" tap="{{ onSwitchCamera }}"></Button>
            <Button class="my-button" text="Decode Frame" tap="{{ onDecodeFrame }}"></Button>
            <Button class="my-button" text="{{ liveButtonText }}" tap="{{ onToggleLiveDetection }}"></Button>
        </StackLayout>
    </GridLayout>
</Page>