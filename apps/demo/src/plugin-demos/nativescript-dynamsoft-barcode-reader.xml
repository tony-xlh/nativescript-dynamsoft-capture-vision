<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:dce="nativescript-dynamsoft-camera-enhancer"
    navigatingTo="navigatingTo" class="page">
    <GridLayout rows="*, auto, auto">
        <dce:DynamsoftCameraEnhancer 
        loaded="{{ dceLoaded }}" 
        rowSpan="3" 
        active="{{ isActive }}"
        cameraID="{{ desiredCamera }}"
        torch="{{ desiredTorchStatus }}"></dce:DynamsoftCameraEnhancer>
        <StackLayout row="1">
            <Button text="Switch Torch" tap="{{ onSwitchTorch }}"></Button>
            <Button text="Switch Camera" tap="{{ onSwitchCamera }}"></Button>
            <Button text="Decode Frame" tap="{{ onDecodeFrame }}"></Button>
        </StackLayout>
    </GridLayout>
</Page>