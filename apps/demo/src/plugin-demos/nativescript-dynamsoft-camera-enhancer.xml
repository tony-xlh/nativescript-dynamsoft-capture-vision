<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:dce="nativescript-dynamsoft-camera-enhancer"
    navigatingTo="navigatingTo" class="page">
    <GridLayout rows="*, auto, auto">
        <dce:DynamsoftCameraEnhancer rowSpan="3" active="{{isActive}}"></dce:DynamsoftCameraEnhancer>
        <StackLayout row="1">
            <Button text="Switch Torch" tap="onSwitchTorch"></Button>
            <Button text="Switch Camera" tap="onSwitchCamera"></Button>
            <Button text="Capture Frame" tap="onCaptureFrame"></Button>
        </StackLayout>
    </GridLayout>
</Page>